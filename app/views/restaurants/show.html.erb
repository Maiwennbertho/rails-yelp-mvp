<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <%= link_to 'Delete Review', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Are you sure ?' } %>
  <% end %>
</ul>

<div>
  <%= link_to "Back to restaurants", restaurants_path %> |
  <%= link_to 'Add review', new_restaurant_review_path(@restaurant) %>
</div>
